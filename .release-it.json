{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": "main"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "npm run build",
    "before:release": "npm pack"
  },
  "github": {
    "release": true,
    "assets": "*.tgz"
  },
  "npm": {
    "publish": true
  }
}
